<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/deal_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="2"
        android:textColor="#000000"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeTextType="uniform"
        tools:text="Bag of Coal" />

    <ImageView
        android:id="@+id/decrease"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:contentDescription="@string/cart_decrease_content_description"
        android:padding="10dp"
        android:src="@drawable/cart_reduce" />

    <TextView
        android:id="@+id/deal_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:text="4" />

    <ImageView
        android:id="@+id/increase"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:contentDescription="@string/cart_increase_content_description"
        android:padding="10dp"
        android:src="@drawable/cart_increase" />

    <TextView
        android:id="@+id/deal_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center_vertical|end"
        android:textColor="@color/target_red"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeTextType="uniform"
        tools:text="$12.33" />


</LinearLayout>